<%= render 'shared/flash' %>
<h1><%= t '.title' %></h1>
<%= link_to t('.new'), new_admin_book_path, class: 'btn' %>
<% @books.each do |book| %>
  <div>
    <h2 class="inline-block">
      <%= link_to book.title, admin_book_path(book) %>
    </h2><%= link_to t('.edit'), edit_admin_book_path(book), class: 'btn ml-2' %>
  </div>
<% end %>
